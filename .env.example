# LabChain Environment Variables
# Copy this file to .env.local and fill in your actual values

# MongoDB Connection
# Get your connection string from MongoDB Atlas or your local MongoDB instance
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/labchain?retryWrites=true&w=majority

# JWT Secret Key
# Generate a strong random secret for production (e.g., using openssl rand -base64 32)
JWT_SECRET=your-strong-secret-key-change-in-production

# Socket Server URL (Public - used by frontend)
# For local development: http://localhost:3001
# For production: https://your-socket-server.herokuapp.com or your deployed URL
NEXT_PUBLIC_SOCKET_HOST=http://localhost:3001

# Node Environment
NODE_ENV=development

# Optional: Redis URL (for caching and pub/sub at scale)
# REDIS_URL=redis://localhost:6379
# Or for Upstash: redis://default:<password>@<host>:<port>
